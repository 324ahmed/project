import tkinter as tk
import re

class Signup:
    def __init__(self):

        self.window=tk.Tk()
        self.window.title("Sign up")
        self.window.geometry('800x800')
        self.window.configure(bg='#374aa1')




        # First Name
        self.labelFirstName = tk.Label(self.window, text="First Name", font=("Arial MS", 12, "bold"),bg='#374aa1')
        self.labelFirstName.pack()
        self.entryFirstName = tk.Entry(self.window)
        self.entryFirstName.pack()

        # Last Name
        self.labelLastName = tk.Label(self.window, text="Last Name", font=("Arial MS", 12, "bold"),bg='#374aa1')
        self.labelLastName.pack()
        self.entryLastName = tk.Entry(self.window)
        self.entryLastName.pack()

        # User Class
        self.labelUserClass = tk.Label(self.window, text="User Class", font=("Arial MS", 12, "bold"),bg='#374aa1')
        self.labelUserClass.pack()
        self.entryUserClass = tk.Entry(self.window)
        self.entryUserClass.pack()

        # Student ID number
        self.labelStudentID = tk.Label(self.window, text="Student ID number (10 digits) or 6 Digits for Faculty and Employee", font=("Arial MS", 12, "bold"),bg='#374aa1')
        self.labelStudentID.pack()
        self.entryStudentID = tk.Entry(self.window)
        self.entryStudentID.pack()

        # Password
        self.labelPassword = tk.Label(self.window, text="The password must be 6 at minimum)", font=("Arial MS", 12, "bold"),bg='#374aa1')
        self.labelPassword.pack()
        self.entryPassword = tk.Entry(self.window)
        self.entryPassword.pack()

        # Email address
        self.labelEmail = tk.Label(self.window, text="Email address", font=("Arial MS", 12, "bold"),bg='#374aa1')
        self.labelEmail.pack()
        self.entryEmail = tk.Entry(self.window)
        self.entryEmail.pack()

        # Phone number
        self.labelPhone = tk.Label(self.window, text="User phone number",font=("Arial MS", 12, "bold"),bg='#374aa1')
        self.labelPhone.pack()
        self.entryPhone = tk.Entry(self.window)
        self.entryPhone.pack()

        # Submit button
        self.buttonSubmit = tk.Button(self.window, text="Submit", command=self.submit, font=("Arial MS", 12, "bold"))
        self.buttonSubmit.pack()

        # Login button
        self.buttonLogin = tk.Button(self.window, text="Login", command=self.go_Login, font=("Arial MS", 12, "bold"))
        self.buttonLogin.pack()

        self.window.mainloop()

    def submit(self):
        student_id=self.entryStudentID.get()
        pattern=r"^\d{6}|\d{10}$"

        if not re.match(pattern, student_id):
            tk.messagebox.showerror("Error", "Invalid Student ID number")
            return

    def go_Login(self):
        self.window.destroy()
        import Login
        Login.Login()

Signup()
