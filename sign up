import tkinter as tk
from tkinter import messagebox

def submit():
    # Get user input
    fname = first_name_entry.get()
    lname = last_name_entry.get()
    uc = user_class_entry.get()
    id= id_number_entry.get()
    pword = password_entry.get()
    email = email_entry.get()
    pnumber = phone_number_entry.get()

    # Validate input
    if not fname or not lname or not uc or not id or not pword or not email or not pnumber:
        messagebox.showerror("Error", "All fields are required.")
        return
    if len(id) != 10 and len(id) != 6:
        messagebox.showerror("Error", "ID number must be 10 digits for students and 6 digits for faculty and employees.")
        return
    if len(pword) < 6:
        messagebox.showerror("Error", "Password must be at least 6 characters long.")
        return
    if not email.endswith("@ksu.edu.sa"):
        messagebox.showerror("Error", "Email must be in the format XXXXXXXX@ksu.edu.sa.")
        return
    if not pnumber.startswith("05") or len(pnumber) != 10:
        messagebox.showerror("Error", "Phone number must be in the format 05XXXXXXXX.")
        return

    # Hash password
    password_hash = hash(pword)

    # Send user information to database
    # ...

    # Show success message
    messagebox.showinfo("Success", "User information submitted successfully.")

def login():
    print("a")

# Create window
window = tk.Tk()
window.title("Sign Up")
window.configure(bg='light blue')

# Create labels and entries
first_name_label = tk.Label(window, text="First Name:")
first_name_label.grid(row=0, column=0, padx=5, pady=5)
first_name_entry = tk.Entry(window)
first_name_entry.grid(row=0, column=1, padx=5, pady=5)

last_name_label = tk.Label(window, text="Last Name:")
last_name_label.grid(row=1, column=0, padx=5, pady=5)
last_name_entry = tk.Entry(window)
last_name_entry.grid(row=1, column=1, padx=5, pady=5)

user_class_label = tk.Label(window, text="User Class:")
user_class_label.grid(row=2, column=0, padx=5, pady=5)
user_class_entry = tk.Entry(window)
user_class_entry.grid(row=2, column=1, padx=5, pady=5)

id_number_label = tk.Label(window, text="ID Number:")
id_number_label.grid(row=3, column=0, padx=5, pady=5)
id_number_entry = tk.Entry(window)
id_number_entry.grid(row=3, column=1, padx=5, pady=5)

password_label = tk.Label(window, text="Password:")
password_label.grid(row=4, column=0, padx=5, pady=5)
password_entry = tk.Entry(window, show="*")
password_entry.grid(row=4, column=1, padx=5, pady=5)

email_label = tk.Label(window, text="Email:")
email_label.grid(row=5, column=0, padx=5, pady=5)
email_entry = tk.Entry(window)
email_entry.grid(row=5, column=1, padx=5, pady=5)

phone_number_label = tk.Label(window, text="Phone Number:")
phone_number_label.grid(row=6, column=0, padx=5, pady=5)
phone_number_entry = tk.Entry(window)
phone_number_entry.grid(row=6, column=1, padx=5, pady=5)

# Create buttons
submit_button = tk.Button(window, text="Submit", command=submit)
submit_button.grid(row=7, column=0, padx=5, pady=5)

login_button = tk.Button(window, text="Login", command=login)
login_button.grid(row=7, column=1, padx=5, pady=5)

# Start window
window.mainloop()
